<p id="notice"><%= notice %></p>

<h1>活動報告と予定</h1>

<% if user_signed_in? %>
    <li><%= link_to current_user.last_name, "#", class: "user-nickname"%> </li>
    <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout"%> </li> 
<% else %>
    <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
    <li><%= link_to '新規登録', new_user_registration_path,  class: "sign-up" %></li>
<% end %>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedules| %>
      <tr>
        <td><%= schedules.client %></td>
        <td><%= link_to 'Show', schedules %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedules.id) %></td>
        <td><%= link_to 'Destroy',schedule_path(schedules.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '活動報告', new_schedule_path %>


<%= month_calendar events:@schedules do |date, schedules| %>
  <%= date.day %>

  <% schedules.each do |schedule| %>
    <div>
      <%= link_to schedule.client, schedule %>
    </div>
  <% end %>
<% end %>

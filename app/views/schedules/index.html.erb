<p id="notice"><%= notice %></p>

<h1>活動報告と予定</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedules| %>
      <tr>
        <td><%= schedules.title %></td>
        <td><%= schedule.client %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_blog_path(schedule.id) %></td>
        <td><%= link_to 'Destroy',blog_path(schedule.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '活動報告', new_schedule_path %>


<%= month_calendar events: @schedules do |date, schedules| %>
  <%= date.day %>

  <% schedules.each do |schedule| %>
    <div>
      <%= link_to schedule.title, schedule %>
    </div>
  <% end %>
<% end %>

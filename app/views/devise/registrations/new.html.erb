<div class="main-box">
  <div class="box-new">
   <div class="box-inner">
      <div>
        <h1>新規登録</h1>
      </div>
      <div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="box-email">
            <%= f.label :苗字 %><br />
            <%= f.text_field :last_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
          </div>


          <div class="box-email">
            <%= f.label :名前 %><br />
            <%= f.text_field :first_name, class:"input-name", id:"first-name", placeholder:"例) 陸太郎" %>
          </div>

          <div class="box-email">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          
          <div class="box-email">
            <%= f.label :パスワード %>
            <br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="box-email">
            <%= f.label :もう一度入力してください %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="box-login">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>
      </div>
      <div class="box-newusr">
        <p><span>------------</span> すでに登録済みですか？ <span>------------</span></p>
        <%= link_to "ログインはこちら", new_user_session_path %>
      </div>
   </div>
  </div>
</div>